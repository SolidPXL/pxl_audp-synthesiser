#ifndef SOUND_EFFECTS_H
#define SOUND_EFFECTS_H

#include "../globals.h"
#include <stdint.h>
#include <arm_math.h>

// Config voor distortion: versterking en clipping-drempel
 struct distortion_config{
    float32_t gain;       // versterking vóór clipping
    float32_t threshold;  // clipping-niveau (bv. 0.2 .. 1.0)
} ;

// Functie-signatuur: door de pipeline aangeroepen
void distortion(void* config);


#endif // SOUND_EFFECTS_H
